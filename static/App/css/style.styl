*
	padding 0
	margin 0

html, body
	height 100%
body
	background #EEEEEE	
	width 100%
	overflow-y scroll
	padding-top 50px

label
	font-weight 100
	font-size 16px

input[type=text]
	border-radius 0


div.panel_central
	display inline-block
	height 100%
	width 100%
	vertical-align top
	div.contFormNew,div.contFormTodo
		margin 0 auto
		text-align center
		width 90%
		h1
			background #B5B7AA
			color #fff
	div.contFormTodo
		text-align center
		.tableTodo
			background #FCFCFC				
			margin 0 auto
			font-size 11px
			width 100%
			caption
				font normal normal 24px arial
				.ctn
					color orange 
					font-weight bold
					font-size 28px
			td, th
				padding 5px
				text-align center
			thead
				color rgb(66, 139, 202)

			
.accItem
	font-size 16px
	margin-right 5px


.avatar-s
	vertical-align top
	margin 0 5px 0 0
	width 20px

.avatar 
	margin-bottom 10px
	width 100px
